{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "rootDir": ".",
    "baseUrl": ".",
    "noImplicitAny": true,
    "sourceMap": true,
    "paths": {
      "*": [
          "src/types/*",
          "node_modules/*",
          "src/server/types/*"
      ]
    }
  },
  "include": [
    "*/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
