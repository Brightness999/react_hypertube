{
  "swagger": "2.0",
  "info": {
    "description": "HyperFlix API",
    "version": "betta",
    "title": "HyperFlix"
  },
  "host": "0.0.0.0:8888",
  "basePath": "/api",
  "tags": [
    {
      "name": "movies",
      "description": "Operations about movies"
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/movies": {
      "get": {
        "summary": "Get some movies",
        "description": "Get the primary information about a movie.",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "default": 20,
            "maximum": 50,
            "type": "integer"
          },
          {
            "name": "offset",
            "in": "query",
            "default": 0,
            "type": "integer"
          },
          {
            "name": "genres",
            "in": "query",
            "type": "string"
          },
          {
            "name": "years",
            "in": "query",
            "maximum": 2018,
            "minimum": 1900,
            "type": "integer"
          },
          {
            "name": "ratings",
            "in": "query",
            "maximum": 5,
            "minimum": 0,
            "type": "integer"
          },
          {
            "name": "q",
            "description": "search in Title, Actors, Director, Summary, Production",
            "maxLength": 100,
            "type": "string"
          },
          {
            "name": "sort",
            "description": "sort by either seeds, date, score, runtime",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of Movies",
            "schema": {
              "type": "array",
              "items": {
                "properties": {
                  "imdbId": {
                    "type": "string"
                  },
                  "title": {
                    "type": "string"
                  },
                  "year": {
                    "type": "integer"
                  },
                  "imdbRating": {
                    "type": "integer"
                  },
                  "coverImage": {
                    "type": "string"
                  },
                  "summary": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "201": {
            "description": "error",
            "schema": {
              "type": "object",
              "items": {
                "properties": {
                  "details": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
