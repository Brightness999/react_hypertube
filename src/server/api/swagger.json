{
  "swagger": "2.0",
  "info": {
    "description": "HyperFlix API",
    "version": "betta",
    "title": "HyperFlix"
  },
  "host": "95.85.22.142:8888",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "paths": {
    "/movies": {
      "get": {
        "summary": "Get some movies",
        "description": "Get the primary information about a movie.",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "default": 20,
            "maximum": 50,
            "type": "integer"
          },
          {
            "name": "offset",
            "in": "query",
            "default": 0,
            "type": "integer"
          },
          {
            "name": "genres",
            "in": "query",
            "description": "action or action,adventure,Animation,Biography,Comedy",
            "type": "string"
          },
          {
            "name": "years",
            "in": "query",
            "description": "2016 or 2010,2018 = between 2010 and 2018",
            "maximum": 2018,
            "minimum": 1900,
            "type": "integer"
          },
          {
            "name": "ratings",
            "in": "query",
            "description": "5 or 2,5 = between 2 and 5",
            "maximum": 5,
            "minimum": 0,
            "type": "integer"
          },
          {
            "name": "q",
            "in": "query",
            "description": "search in Title, Actors, Director, Summary, Production",
            "maxLength": 100,
            "type": "string"
          },
          {
            "name": "sort",
            "in": "query",
            "description": "sort by either seeds, date, score, runtime",
            "enum": [
              "seeds.asc",
              "seeds.desc",
              "date.asc",
              "date.desc",
              "score.asc",
              "score.desc",
              "runtime.asc",
              "runtime.desc"
            ],
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of Movies",
            "schema": {
              "type": "object",
              "properties": {
                "movies": {
                  "type": "array",
                  "items": {
                    "properties": {
                      "imdbId": {
                        "type": "string"
                      },
                      "title": {
                        "type": "string"
                      },
                      "year": {
                        "type": "integer"
                      },
                      "imdbRating": {
                        "type": "integer"
                      },
                      "coverImage": {
                        "type": "string"
                      },
                      "summary": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "201": {
            "description": "error",
            "schema": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "details": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/movies/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "default": "tt0110912",
          "description": "imdb_id of the movie",
          "type": "string"
        }
      ],
      "get": {
        "summary": "Gets fully details of a movie",
        "responses": {
          "200": {
            "description": "full details of movie exemple id tt0499549",
            "schema": {
              "type": "object",
              "properties": {
                "movie": {
                  "type": "object"
                }
              }
            }
          },
          "201": {
            "description": "error",
            "schema": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "details": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/movies/genres": {
      "get": {
        "summary": "Get all current genres",
        "responses": {
          "200": {
            "description": "A list of genres",
            "schema": {
              "type": "object",
              "properties": {
                "genres": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "201": {
            "description": "error",
            "schema": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "details": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
